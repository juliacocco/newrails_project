function updateErrors() {
  const errors = document.querySelector(".error-message");
  errors.innerHTML = '<%= j render "orders/errors", order: @order %>'
}

<% if @order.valid? %>
  updateDOM();
  updateErrors();
<% else%>
  updateErrors();
<% end %>
