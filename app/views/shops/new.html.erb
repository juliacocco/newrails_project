<div class="container">
  <h2>Create a new shop</h2>
  <div class="center-block">
    <%= simple_form_for [@shop] do |f| %>
    <%= f.input :commercial_name%>
    <%= f.input :legal_name %>
    <%= f.input :company_number %>
    <%= f.input :address %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Create", class: "btn btn-primary bigger" %>
  <% end %>
  <%= link_to "Back to the home page", root_path, class:"link-back" %>
  </div>
</div>
