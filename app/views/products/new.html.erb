<% if params[:hidden_tag] == "barcode"%>
  <div class="container">
    <div class="add-form center-block">
      <%= simple_form_for @product do |f| %>
      <%= f.input :bar_code %>
      <%= f.submit "Check barcode", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Back to the home page", root_path, class:"link-back" %>
    </div>
  </div>

<% else %>

  <div class="container">
    <h2>Create a new product</h2>
    <div class="center-block">
      <%= simple_form_for @product do |f| %>
      <%= f.input :bar_code, :input_html => { :value => params[:hidden_tag].to_i } %>
      <%= f.input :category %>
      <%= f.input :product_type %>
      <%= f.input :brand %>
      <%= f.input :model %>
      <%= f.input :specs %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Create", class: "btn btn-primary bigger" %>
    <% end %>
    <%= link_to "Back to the home page", root_path, class:"link-back" %>
    </div>
    <br>
  </div>

<% end  %>

